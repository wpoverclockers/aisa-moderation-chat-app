# Hugging Face API Configuration
HF_API_TOKEN=your_huggingface_token_here
HF_API_URL=https://api-inference.huggingface.co/models/duchaba/Friendly_Text_Moderation

# Server Configuration
PORT=3001
NODE_ENV=development

# Moderation Configuration
# 
# Option 1: Set SAFER_VALUE directly (0.005 to 0.1)
#          Lower value = stricter (blocks more)
#          Higher value = more permissive (blocks less)
#          Example: SAFER_VALUE=0.05
#
# Option 2: Use MODERATION_THRESHOLD (0.0 to 1.0) - will be mapped to safer range
#          Higher threshold = stricter moderation = lower safer value
#          Example: MODERATION_THRESHOLD=0.5
#
# If SAFER_VALUE is set, it takes precedence over MODERATION_THRESHOLD
#
SAFER_VALUE=
MODERATION_THRESHOLD=0.5

# Rate Limiting (messages per minute per connection)
RATE_LIMIT_PER_MINUTE=30

# AI Agent Configuration (OpenAI ChatGPT)
# Set to 'false' to disable AI agent responses
AI_ENABLED=true
# OpenAI API Key - Get yours from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
# OpenAI model to use (gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview, etc.)
AI_MODEL=gpt-3.5-turbo
# Maximum length of AI responses (characters)
AI_MAX_RESPONSE_LENGTH=200
# Number of previous messages to include for context
AI_CONVERSATION_HISTORY_SIZE=5

# Feedback Submission to Hugging Face Hub
# Set to 'true' to attempt automatic submission (requires write permissions)
HF_SUBMIT_FEEDBACK=false
# Optional: Custom dataset repository for feedback
# HF_FEEDBACK_DATASET_REPO=your-username/moderation-feedback
